-- Creating the Users table
CREATE TABLE Users (
    UserID INT PRIMARY KEY,
    Username VARCHAR(100),
    Gender VARCHAR(10),
    Email VARCHAR(100),
    Password VARCHAR(100),
    Role VARCHAR(20),
    PhoneNo VARCHAR(20),
    Address VARCHAR(255),
    Country VARCHAR(50)
);

-- Creating the Cars table
CREATE TABLE Cars (
    CarID INT PRIMARY KEY,
    Type VARCHAR(50),
    Brand VARCHAR(50),
    Model VARCHAR(50),
    Edition VARCHAR(50),
    Year INT,
    Insurance VARCHAR(50),
    Condition VARCHAR(20),
    Transmission VARCHAR(20),
    EngineCapacity DECIMAL(5,2),
    FuelType VARCHAR(20),
    RegistrationNo VARCHAR(50),
    District VARCHAR(50),
    Color VARCHAR(20),
    Weight DECIMAL(8,2),
    Mileage INT,
    BasePrice DECIMAL(10,2),
    SellerID INT,
    Description TEXT,
    FOREIGN KEY (SellerID) REFERENCES Users(UserID)
);
